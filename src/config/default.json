    "host": "",

    "Log": {
      "Console" :{
        "active" : true,
        "outputMode" : "short",
        "color": true
      },
      "File" :{
        "active" : false,
        "file" : "javascript.log",
        "period" : "1d",
        "count" : 3
      }
