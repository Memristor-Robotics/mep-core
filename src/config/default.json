    "Drivers": {
        "PLLSP": {
          "@class": "drivers/pllsp/PLLSP",
          "@load": true
        },

        "Uart": {
          "@class": "drivers/uart/Uart",
          "@load": true,
          "@dependencies": {
            "protocol": "PLLSP"
          }
        },

        "MotionDriver": {
            "@class": "drivers/motion/MotionDriver",
            "@load": true,
            "@dependencies": {
              "communicator": "Uart"
            },

            "startX": -1300,
            "startY": 0,
            "startOrientation": 0,
            "startSpeed": 100,
            "precision": 2,
            "refreshDataPeriod": 50
        },

        "MotionDriverController": {
          "@class": "drivers/motion/MotionDriverController",
          "@load": true,
          "@dependencies": {
            "motionDriver": "MotionDriver"
          }
        },

        "CanDriver": {
            "@class": "drivers/can/CanDriver",
            "@load": true
        },

        "StarterDriver": {
            "@class": "drivers/starter/StarterDriver",
            "@load": true,
            "type": "keyboard",
            "delayTimer": 400
        },

        "UsageDriver": {
            "@class": "drivers/usage/UsageDriver",
            "@load": true,
            "refreshPeriod": 600
        }
    },

    "Services": {
        "PositionService": {
            "moveOptions": {
                "pathfinding": false,
                "direction": "forward",
                "relative": false,
                "tolerance": -1,
